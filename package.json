{
  "name": "@telerik/kendo-external-package-tasks",
  "version": "0.1.0",
  "description": "An internal utility package exporting gulp tasks for the external components infrastructure",
  "repository": "telerik/kendo-external-package-tasks",
  "main": "gulp-tasks.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint ."
  },
  "keywords": [
    "Kendo UI"
  ],
  "dependencies": {
    "@telerik/eslint-config": "telerik/eslint-config-kendo#master",
    "babel-core": "~6",
    "babel-loader": "^6.2.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-es2015-modules-umd": "~6",
    "babel-preset-es2015": "~6",
    "babel-preset-stage-1": "~6",
    "babel-traverse": "6.3.19",
    "extract-text-webpack-plugin": "^0.9.1",
    "gulp-jasmine": "^2.2.1",
    "jasmine-reporters": "^2.1.1",
    "jasmine-spec-reporter": "^2.4.0",
    "@telerik/kendo-common-tasks": "telerik/kendo-common-tasks#master"
  },
  "author": "Telerik",
  "license": "Apache-2.0",
  "devDependencies": {
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.0.3",
    "validate-commit-msg": "^1.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    }
  }
}
